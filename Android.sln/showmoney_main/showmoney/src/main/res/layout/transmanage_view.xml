<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1EBED6"
     >
      <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"              
                android:text="我的账单"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="22dp" 
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal"
            > 

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 

                android:background="@drawable/rbg_bg"
                android:gravity="center"
                android:padding="2dp"
                >

                <RadioButton
                    android:id="@+id/radio_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部交易"
                    android:checked="true" 
                    android:button="@null"
                    android:textColor="@color/rb_txt"
                    android:background="@drawable/rb1_bg_selector"
                    android:padding="7dp"
                     />

                <RadioButton
                    android:id="@+id/radio_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易成功"                    
                    android:button="@null"
                     android:textColor="@color/rb_txt"
                    android:background="@drawable/rb2_bg_selector"
                    android:padding="7dp" />

                <RadioButton
                    android:id="@+id/radio_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易失败"
                     android:textColor="@color/rb_txt"
                    android:background="@drawable/rb3_bg_selector"
                    android:button="@null" 
                    android:padding="7dp" />           


            </RadioGroup>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
            android:background="#FFFFFF"
          >

            <TextView
                android:id="@+id/bill_tips"
                android:layout_width="fill_parent"
                android:layout_height="40dp"                
                android:gravity="center"
                android:textSize="13sp"
                android:text=""
                android:background="#DCDDDE" />

            

           <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
                           
        </LinearLayout>

</LinearLayout>
