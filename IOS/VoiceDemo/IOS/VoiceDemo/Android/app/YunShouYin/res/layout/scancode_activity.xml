<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

  <SurfaceView android:id="@+id/preview_view"
               android:layout_width="fill_parent"
               android:layout_gravity="center"
               android:layout_height="fill_parent"
               android:layout_centerInParent="true"/>

  <com.cardinfolink.yunshouyin.view.ViewfinderView
      android:id="@+id/viewfinder_view"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="@color/transparent"/>
  
  
    <ImageView 
      android:id="@+id/back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="20dp"
      android:background="@drawable/back_color"
      android:src="@drawable/back"
      android:scaleType="centerInside"
      
      />
  
  
  <ImageView 
      android:id="@+id/flashlight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginRight="20dp"
      android:layout_alignParentRight="true"
      android:background="@drawable/flashlight_color"
      android:src="@drawable/flashlight"
      android:scaleType="centerInside"
      
      />
  
  
  <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="40dp"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:text="二维码或条码"
      
      />
  <RelativeLayout
     android:id="@+id/trading_custom_dialog"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:layout_centerInParent="true"
     android:visibility="gone"
       >
  
  <LinearLayout
     android:id="@+id/trading_custom_dialog_loading"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView 
         android:id="@+id/load_img" 
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:src="@drawable/loading"
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="交易读取中，请稍后。。。"  
         android:layout_marginBottom="10dp"
          />
          
       <TextView
         android:id="@+id/second"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:textColor="#00bbd3"
         android:text="0S"
          />
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/query"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="查询结果" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/close"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="关闭"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
      
      </LinearLayout>
      
  
   <LinearLayout
     android:id="@+id/trading_custom_dialog_nopay"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView       
         android:layout_width="40dp"
         android:layout_height="40dp"        
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="@string/dialog_trade_nopay"  
         android:layout_marginBottom="10dp"
          />
          
       
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/nopay_query"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="查询结果" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/nopay_close"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="关闭"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
      
      </LinearLayout>
  
  
      <LinearLayout
     android:id="@+id/trading_custom_dialog_success"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView  
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:src="@drawable/right"
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="@string/dialog_trade_success"  
         android:layout_marginBottom="10dp"
          />
          
    
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/histroy"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="历史交易" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/success_dialog_back"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="返回"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
 </LinearLayout>

      
      
      
      
  
   <LinearLayout
     android:id="@+id/trading_custom_dialog_fail"
     android:layout_width="300dp"
     android:layout_height="200dp" 
     android:orientation="vertical"
     android:visibility="gone"
     android:background="@drawable/dialog_color"  
     android:gravity="center_horizontal"
       >
      
      <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_margin="10dp"        
           >
          <ImageView  
         android:layout_width="40dp"
         android:layout_height="40dp" 
         android:src="@drawable/wrong"
         android:layout_centerInParent="true"
              />
      </RelativeLayout>
      
      
    <LinearLayout
         
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:gravity="center_horizontal" 
         android:orientation="vertical"       
           >  
      <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:textSize="17sp" 
         android:text="@string/dialog_trade_fail"  
         android:layout_marginBottom="10dp"
          />
          
    
      
      </LinearLayout>
      
       <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:gravity="center_horizontal" 
         android:orientation="horizontal"       
           >  
      <TextView
         android:id="@+id/fail_query"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginRight="10dp"
         android:textSize="17sp" 
         android:text="查询结果" 
         android:background="@drawable/dialog_button_color"
         android:gravity="center" 
         
          />
          
       <TextView
         android:id="@+id/fail_dialog_back"
         android:layout_width="100dp"
         android:layout_height="40dp" 
         android:layout_marginLeft="10dp"
         android:textSize="17sp"        
         android:text="返回"
         android:background="@drawable/dialog_button_color" 
         android:gravity="center"
          />
      
      </LinearLayout>
 </LinearLayout>
      
      
  </RelativeLayout>

</RelativeLayout>
